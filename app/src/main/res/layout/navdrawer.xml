<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.NavigationView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:menu="@menu/menu_drawer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <!-- 退出按钮 -->
        <LinearLayout
            android:id="@+id/footer_exit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_exit_to_app_black_24dp" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_drawer_footer"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/drawer_footer_exit"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- 关于按钮 -->
        <LinearLayout
            android:id="@+id/footer_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_info_outline_black_24dp" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_drawer_footer"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/drawer_footer_about"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>
        <!-- 反馈按钮 -->
        <LinearLayout
            android:id="@+id/footer_feedback"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_live_help_black_24dp" />

            <TextView
                android:layout_width="36dp"
                android:layout_height="match_parent"
                android:background="@drawable/button_drawer_footer"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/drawer_footer_feedback"
                android:textColor="@color/black"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.NavigationView>
