<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/item_list_margin"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="6dp"
            android:background="@drawable/ic_alt"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="9dp"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:singleLine="true"
            android:text="浙师资讯 | 11月13-14日部分讲座信息一览"
            android:textIsSelectable="true"
            android:textSize="15sp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:lines="2"
            android:text="“理想型”之作为“理想”—— 韦伯式国家观之政治哲学11月13日（周五）上午9:00法政学院26幢301教室"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/overview"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toEndOf="@id/image"
            android:layout_toRightOf="@id/image"
            android:gravity="end"
            android:text="2015年11月11日"
            android:textSize="12sp" />

    </RelativeLayout>

</FrameLayout>