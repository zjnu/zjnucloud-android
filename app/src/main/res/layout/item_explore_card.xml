<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:cardCornerRadius="3dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:id="@+id/explore_header"
            android:layout_width="match_parent"
            android:layout_height="150dp">
            <ImageView
                android:id="@+id/explore_image"
                android:scaleType="centerCrop"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/explore_title"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/explore_card_title_left_margin"
                android:layout_marginStart="@dimen/explore_card_title_left_margin"
                android:layout_marginBottom="@dimen/explore_card_title_left_margin"
                android:maxLines="1"
                android:textSize="16sp"
                android:padding="5dp"
                android:textColor="#ffffff"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>