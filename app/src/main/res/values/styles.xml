<resources>

    <!-- App基础样式 -->
    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <!-- App主样式，需继承NoActionBar -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/material_blue</item>
        <item name="colorPrimaryDark">@color/material_blue_dark</item>
        <item name="colorAccent">@color/material_pink</item>
	    <!--<item name="theme">@style/ThemeOverlay.AppCompat.Light</item>-->
    </style>

    <!-- Toolbar 字体颜色样式 -->
    <style name="mToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
       <item name="android:textColor">@color/white</item>
    </style>
    <!-- CollapsingToolbarLayout Title 样式-->
    <style name="mCollapsingTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- My Clickable Background -->
    <!--<style name="MySelectableItemBackground" parent="">-->

    <!--</style>-->

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!-- 横向线条 -->
    <style name="h_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/line_color</item>
    </style>
    <!-- 纵向线条 -->
    <style name="v_line">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

</resources>